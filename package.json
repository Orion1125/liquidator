  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
